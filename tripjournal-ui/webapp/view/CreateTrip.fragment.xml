<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
  xmlns:layout="sap.ui.layout.form"
>
  <Dialog
    id="createDialog"
    title="New Trip"
  >
    <content>
      <f:SimpleForm id="_IDGenSimpleForm" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" emptySpanL="1">
        <Label id="_IDGenLabel11" text="{i18n>year}"/>
        <Select id="_IDGenSelect2"  selectedKey="{create>/Yyear}"
                items="{years>/}">
            <core:Item id="_IDGenItem3" key="{years>key}" text="{years>text}"/>
        </Select>

        <Label id="_IDGenLabel19" text="{i18n>month}"/>
        <Select id="_IDGenSelect3"  selectedKey="{create>/Mmonth}"
                items="{months>/}">
            <core:Item id="_IDGenItem10" key="{months>key}" text="{months>text}"/>
        </Select>

        <Label id="_IDGenLabel" text="Car (License Plate)"/>
        <Input id="inpCar"
               placeholder="e.g. ABC‑123"
               value="{create>/LicensePlate}"
               showValueHelp="true"
               required="true"
               valueHelpRequest=".onCarValueHelpRequest"/>

        <Label id="_IDGenLabel4" text="KM Start"/>
        <Input id="_IDGenInput3" value="{create>/KmBefore}" type="Number" required="true"/>

        <Label id="_IDGenLabel5" text="Fuel Price"/>
        <Input id="_IDGenInput4" value="{create>/GasPrice}" type="Number"/>

        <Label id="_IDGenLabel6" text="Currency"/>
        <Select id="_IDGenSelect" selectedKey="{create>/GasCurr}">
          <core:Item id="_IDGenItem" key="EUR" text="EUR"/>
          <core:Item id="_IDGenItem1" key="CNY" text="CNY"/>
        </Select>
      </f:SimpleForm>
    </content>

    <beginButton>
    <Button id="_IDGenButton1"
        text="Create"
        press=".onCreateTrip" />
    </beginButton>
    <endButton>
    <Button id="_IDGenButton2"
        text="Cancel"
        press=".onCloseCreateDialog" />
    </endButton>


  </Dialog>
</core:FragmentDefinition>
