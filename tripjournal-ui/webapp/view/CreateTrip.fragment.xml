<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
  xmlns:layout="sap.ui.layout.form"
>
  <Dialog
    id="createDialog"
    title="New Trip"
  >
    <content>
      <f:SimpleForm id="_IDGenSimpleForm" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" emptySpanL="1">
        <Label id="_IDGenLabel19" text="{i18n>create.period.label}" />
        <DatePicker
            id="createPeriod"
            value="{
              path: 'create>/PeriodDate',
              type: 'sap.ui.model.type.Date',
              formatOptions: { pattern: 'MM-y' }
            }"
            placeholder="{i18n>create.period.placeholder}"
            change=".onCreatePeriodChange"
            class="sapUiSmallMarginBottom"/>
        <Label id="_IDGenLabel" text="{i18n>car}"/>
        <Input id="inpCar"
               placeholder="e.g. ABCâ€‘123"
               value="{create>/LicensePlate}"
               showValueHelp="true"
               required="true"
               valueHelpRequest=".onCarValueHelpRequest"/>

        <Label id="_IDGenLabel4" text="{i18n>kmStart}"/>
        <Input id="_IDGenInput3" value="{create>/KmBefore}" type="Number" required="true"/>

        <Label id="_IDGenLabel5" text="{i18n>fuelPrice}"/>
        <Input id="_IDGenInput4" value="{create>/GasPrice}" type="Number"/>

        <Label id="_IDGenLabel6" text="{i18n>currency}"/>
        <Input id="inpCurrencyCreate"
                value="{create>/GasCurr}"
                showValueHelp="true"
                valueHelpRequest=".onCurrValueHelpRequest"
                required="true"
                width="100%"/>
      </f:SimpleForm>
    </content>

    <beginButton>
    <Button id="_IDGenButton1"
        text="{i18n>create}"
        press=".onCreateTrip" />
    </beginButton>
    <endButton>
    <Button id="_IDGenButton2"
        text="{i18n>cancel}"
        press=".onCloseCreateDialog" />
    </endButton>


  </Dialog>
</core:FragmentDefinition>
