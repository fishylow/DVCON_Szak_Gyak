<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core">

  <ValueHelpDialog id="currVHD"
        title="Select Currency"
        key="Waers"
        supportRanges="false"
        supportMultiselect="false"
        ok=".onCurrVhOk"
        cancel=".onCurrVhCancel"
        afterClose=".onCurrVhAfterClose">

    <filterBar>
      <fb:FilterBar id="fbCurr" search=".onCurrFilterBarSearch" isRunningInValueHelpDialog="true">
        <fb:filterGroupItems>
          <fb:FilterGroupItem id="fgiWaers"
                              groupName="__$INTERNAL$"
                              name="Waers"
                              label="Currency">
            <fb:control><m:Input id="_IDGenInput" name="Waers"/></fb:control>
          </fb:FilterGroupItem>
        </fb:filterGroupItems>
      </fb:FilterBar>
    </filterBar>
  </ValueHelpDialog>
</core:FragmentDefinition>
