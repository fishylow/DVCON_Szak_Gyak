<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
  <Dialog title="Edit Header" id="editHeaderDialog">
    <content>
      <f:SimpleForm id="_IDGenSimpleForm1" editable="true" layout="ResponsiveGridLayout">
        <Label id="_IDGenLabel1" text="KM Start"/>
        <Input id="_IDGenInput5" value="{edit>/KmBefore}" type="Number"/>

        <Label id="_IDGenLabel7" text="FuelÂ Price"/>
        <Input id="_IDGenInput7" value="{edit>/GasPrice}" type="Number"/>

        <Label id="_IDGenLabel8" text="Currency"/>
        <Input id="inpCurrencyEdit"
              value="{edit>/GasCurr}"
              showValueHelp="true"
              valueHelpRequest=".onCurrValueHelpRequest"
              required="true"
              width="100%"/>
      </f:SimpleForm>
    </content>

    <beginButton>
      <Button id="_IDGenButton5" text="Save" press=".onUpdateHeader"/>
    </beginButton>
    <endButton>
      <Button id="_IDGenButton6" text="Cancel" press=".onCancelHeaderDialog"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
